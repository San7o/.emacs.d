# -*- mode: snippet -*-
# name: hello 
# key: hello
# --
## --- Settings ---

CFLAGS=-Wall -Werror -Wpedantic -ggdb
LDFLAGS=
CC=gcc

OUT_NAME=hello$0
OBJ=main.o

## --- Commands ---

# --- Targets ---

all: $(OUT_NAME)

run: $(OUT_NAME)
	chmod +x $(OUT_NAME)
	./$(OUT_NAME)

$(OUT_NAME): $(OBJ)
	$(CC) $(OBJ) $(LDFLAGS) $(CLAGS) -o $(OUT_NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm $(OBJ) 2>/dev/null || :

distclean:
	rm $(OUT_NAME) 2>/dev/null || :
